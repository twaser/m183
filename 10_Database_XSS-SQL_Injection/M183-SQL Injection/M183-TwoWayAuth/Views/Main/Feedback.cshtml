@{
    ViewBag.Title = "Feedback Page";
}

<div class="row" style="margin-top:80px;">
    <div class="col-lg-8 col-lg-offset-2">
        <form action="./FeedbackSubmit" method="post" class="well col-lg-8 col-lg-offset-2" style="margin-top:60px;">
            <label>Feedback</label>
            <textarea name="feedback" class="form-control"></textarea>
            <input type="submit" name="submit" value="Submit" class="btn btn btn-primary" />
            @ViewBag.Message
        </form>
    </div>
</div>
